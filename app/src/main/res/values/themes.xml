    <style name="Theme.ThanksApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="colorAccent">@color/color9</item>
