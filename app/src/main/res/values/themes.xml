<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThanksApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/general_brand</item>
        <item name="colorPrimaryDark">@color/general_brand</item>
        <item name="colorAccent">@color/general_brand</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ThanksApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ThanksApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.ThanksApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:tint">@color/general_background</item>
        <item name="android:textColor">@color/general_background</item>
    </style>


</resources>