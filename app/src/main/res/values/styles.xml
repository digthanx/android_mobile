<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Headline3.Violet" parent="Headline3">
        <item name="android:textColor">@color/color13</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1.Gray" parent="Body1">
        <item name="android:textColor">@color/color21</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2.Violet" parent="Body2">
        <item name="android:textColor">@color/color13</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/color2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption.Violet" parent="Caption">
        <item name="android:textColor">@color/color14</item>
    </style>

    <style name="Caption.Orange" parent="Caption">
        <item name="android:textColor">@color/color19</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="DefaultButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/color13</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/color1</item>
        <item name="colorOnPrimary">@color/color5</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/color1</item>
        <item name="colorOnPrimary">@color/color5</item>
    </style>

    <style name="NavigationDrawer" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlHighlight">@color/color10</item>
        <item name="android:windowBackground">@color/color10</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogWithoutBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>


</resources>