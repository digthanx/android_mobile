<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Headline3.White" parent="Headline3">
        <item name="android:textColor">@color/color5</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body1.Gray" parent="Body1">
        <item name="android:textColor">@color/color21</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2.Black" parent="Body2">
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body2.White" parent="Body2">
        <item name="android:textColor">@color/color5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/color2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption.Violet" parent="Caption">
        <item name="android:textColor">@color/color14</item>
    </style>

    <style name="Caption.Orange" parent="Caption">
        <item name="android:textColor">@color/color19</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="DefaultButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/general_brand</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NotFilledButton" parent="">
        <item name="android:backgroundTint">@color/general_background</item>
        <item name="iconTint">@color/general_brand</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/general_brand</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/general_brand</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/general_brand</item>
        <item name="colorOnPrimary">@color/color5</item>

    </style>


    <style name="NavigationDrawer" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlHighlight">@color/color10</item>
        <item name="android:windowBackground">@color/color10</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialogWithoutBackground" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="android:background">@color/general_brand</item>
        <item name="android:textColor">@color/color5</item>
        <item name="colorOnPrimary">@color/color5</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="MyChipsOrange" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconVisible">true</item>
        <item name="chipIcon">@drawable/ic_currency</item>
        <item name="chipIconTint">@color/transaction_chip_text_color_state</item>
        <item name="android:textColor">@color/transaction_chip_text_color_state</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">@color/chip_background_color_state</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ChipsHistory</item>
    </style>

    <style name="ShapeAppearance.ChipsHistory" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="android:layout_width">20dp</item>

    </style>

    <style name="MyChipsHistory" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:textColor">@color/history_chip_text_color_state</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeColor">@color/chip_history_underline_color</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ChipsHistory</item>
        <item name="strokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="MyChipsFeed" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:backgroundTint">@color/chip_text_color_state</item>
        <item name="android:textColor">@color/feed_chip_text_color_state</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">50dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.ChipsFeed</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ShapeAppearance.ChipsFeed" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="EditProfileTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxStrokeColor">@color/general_color_grey</item>
       <item name="hintTextColor">@color/general_contrast</item>
    </style>


</resources>