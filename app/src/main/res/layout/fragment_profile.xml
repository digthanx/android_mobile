<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.ProfileFragment">

    <TextView
        android:id="@+id/username_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_label"
        app:layout_constraintStart_toEndOf="@+id/username_label_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tg_id_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telegram_id_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_label_tv" />

    <TextView
        android:id="@+id/tg_id_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telegram_id_label"
        app:layout_constraintStart_toEndOf="@+id/tg_id_label_tv"
        app:layout_constraintTop_toBottomOf="@+id/username_label_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>